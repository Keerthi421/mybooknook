{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/book",
        "destination": "/redirect.html"
      },
      {
        "source": "/book/**",
        "destination": "/redirect.html"
      }
    ]
  }
}
